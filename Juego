  <div class="container">
    <div class="box" id="facilitador" ondrop="drop(event)" ondragover="allowDrop(event)">
      <h2>Facilitador ğŸ“ˆ</h2>
    </div>
    <div class="box" id="inhibidor" ondrop="drop(event)" ondragover="allowDrop(event)">
      <h2>Inhibidor âŒ</h2>
    </div>
  </div>

  <button onclick="verificar()">Verificar</button>

  <script>
    let draggedItem = null;
    const items = document.querySelectorAll('.item');
    items.forEach(item => {
      item.addEventListener('dragstart', e => {
        draggedItem = item;
      });
    });

    function allowDrop(e) {
      e.preventDefault();
    }

    function drop(e) {
      e.preventDefault();
      if (draggedItem) {
        e.target.closest('.box').appendChild(draggedItem);
        draggedItem = null;
      }
    }

    function verificar() {
      document.querySelectorAll('.item').forEach(item => {
        item.classList.remove('correct', 'incorrect');
        const parentId = item.parentElement.id;
        const grupo = item.getAttribute('data-group');
        if (parentId === grupo) {
          item.classList.add('correct');
        } else {
          item.classList.add('incorrect');
        }
      });
    }
  </script>
